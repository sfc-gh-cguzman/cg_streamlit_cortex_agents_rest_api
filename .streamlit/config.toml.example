style = "normal"
weight = 300

[[theme.fontFaces]]
family = "Poppins"
url = "app/static/Poppins/Poppins-Regular.ttf"
style = "normal"
weight = 400

[[theme.fontFaces]]
family = "Poppins"
url = "app/static/Poppins/Poppins-Medium.ttf"
style = "normal"
weight = 500

[[theme.fontFaces]]
family = "Poppins"
url = "app/static/Poppins/Poppins-SemiBold.ttf"
style = "normal"
weight = 600

[[theme.fontFaces]]
family = "Poppins"
url = "app/static/Poppins/Poppins-Bold.ttf"
style = "normal"
weight = 700

[[theme.fontFaces]]
family = "Poppins"
url = "app/static/Poppins/Poppins-ExtraBold.ttf"
style = "normal"
weight = 800

[[theme.fontFaces]]
family = "Poppins"
url = "app/static/Poppins/Poppins-Black.ttf"
